@model List<CQRSNight.MediatorDesignPattern.Results.GetCustomerQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <a href="/Customers/CreateCustomer/" class="btn btn-primary">Yeni Müşteri Ekle</a>
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Seçenekler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerSurname</td>
                <td>
                    <a href="/Customers/UpdateCustomer/@item.CustomerId" class="btn btn-warning">Güncelle</a>
                    <a href="/Customers/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>